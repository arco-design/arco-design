{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://arco.design/ai/component-metadata.schema.json",
  "title": "Arco Component Metadata",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "specVersion",
    "registryVersion",
    "component",
    "purpose",
    "api",
    "rules",
    "usage",
    "links"
  ],
  "properties": {
    "specVersion": {
      "type": "string",
      "description": "Schema version (SemVer)",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?$"
    },
    "registryVersion": {
      "type": "string",
      "description": "Registry version (SemVer)",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?$"
    },
    "component": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "title": { "$ref": "#/definitions/LocalizedString" }
      }
    },
    "purpose": { "$ref": "#/definitions/LocalizedString" },
    "whenNotToUse": {
      "type": "array",
      "items": { "$ref": "#/definitions/LocalizedString" }
    },
    "alternatives": {
      "type": "array",
      "items": { "type": "string" }
    },
    "api": {
      "type": "object",
      "additionalProperties": false,
      "required": ["props"],
      "properties": {
        "props": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "type", "required", "description", "links"],
            "properties": {
              "name": { "type": "string" },
              "type": { "type": "string" },
              "required": { "type": "boolean" },
              "default": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "number" },
                  { "type": "boolean" },
                  { "type": "null" },
                  { "type": "object" },
                  { "type": "array" }
                ]
              },
              "description": { "$ref": "#/definitions/LocalizedString" },
              "links": {
                "type": "object",
                "additionalProperties": false,
                "required": ["source"],
                "properties": {
                  "source": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "rules": {
      "type": "object",
      "additionalProperties": false,
      "required": ["invariants"],
      "properties": {
        "invariants": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "dsl", "level", "description", "links"],
            "properties": {
              "id": { "type": "string" },
              "dsl": { "type": "string" },
              "level": { "type": "string", "enum": ["error", "warn"] },
              "description": { "$ref": "#/definitions/LocalizedString" },
              "links": {
                "type": "object",
                "additionalProperties": false,
                "required": ["source"],
                "properties": {
                  "source": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "usage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["recipes"],
      "properties": {
        "recipes": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name", "description", "links"],
            "properties": {
              "id": { "type": "string" },
              "name": { "$ref": "#/definitions/LocalizedString" },
              "description": { "$ref": "#/definitions/LocalizedString" },
              "demo": { "type": "string" },
              "links": {
                "type": "object",
                "additionalProperties": false,
                "required": ["source"],
                "properties": {
                  "source": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source"],
      "properties": {
        "source": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "docs": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  },
  "definitions": {
    "LocalizedString": {
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "properties": {
        "zh-CN": { "type": "string" },
        "en-US": { "type": "string" }
      },
      "required": ["zh-CN"]
    }
  }
}
